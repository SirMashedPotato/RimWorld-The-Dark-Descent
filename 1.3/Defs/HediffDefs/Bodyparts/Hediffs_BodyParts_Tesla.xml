        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>DarkDescent_TeslaCoolant</li>
      </thingDefs>
    </fixedIngredientFilter>
    <appliedOnFixedBodyParts>
      <li>Shoulder</li>
      <li>Humerus</li>
      <li>Radius</li>
      <li>Femur</li>
      <li>Tibia</li>
