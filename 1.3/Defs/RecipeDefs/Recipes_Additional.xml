<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- res infusion -->

  <RecipeDef>
    <researchPrerequisite>DarkDescent_InfusionResurrectionResearch</researchPrerequisite>
    <defName>DarkDescent_InfusionResurrectionCreation</defName>
    <label>create resurrection infusion</label>
    <description>Create a resurrection infusion from 25 vitae, 50 plasteel and 3 advanced components.</description>
    <jobString>Creating resurrection infusion.</jobString>
    <workAmount>800</workAmount>
	<workSkill>Crafting</workSkill>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <ingredients>
	  <li>
        <filter>
          <thingDefs>
				<li>DarkDescent_Vitae</li>
		  </thingDefs>
        </filter>
        <count>25</count>
      </li>
	  <li>
        <filter>
          <thingDefs>
				<li>Plasteel</li>
		  </thingDefs>
        </filter>
        <count>50</count>
      </li>
	  <li>
        <filter>
          <thingDefs>
				<li>ComponentSpacer</li>
		  </thingDefs>
        </filter>
        <count>3</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
	  <thingDefs>
			<li>DarkDescent_Vitae</li>
			<li>Plasteel</li>
			<li>ComponentSpacer</li>
		  </thingDefs>
    </fixedIngredientFilter>
	<products>
      <DarkDescent_InfusionResurrection>1</DarkDescent_InfusionResurrection>
    </products>
	<skillRequirements>
      <Intellectual>18</Intellectual>
    </skillRequirements>
  </RecipeDef>
  
