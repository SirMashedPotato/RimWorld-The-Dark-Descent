<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- Grunt -->
	
  <RecipeDef>
	<researchPrerequisite>DarkDescent_GruntResearch</researchPrerequisite>
    <defName>DarkDescent_GruntCreation</defName>
    <label>create servant grunt</label>
    <description>Create a servant grunt from a human corpse, 5 vitae and 25 leather.</description>
	<!--<workerClass>DarkDescent.RecipeWorker_CreateServant</workerClass>-->
    <jobString>Creating servant grunt.</jobString>
    <workAmount>450</workAmount>
    <workSpeedStat>MedicalOperationSpeed</workSpeedStat>
    <workSkill>Medicine</workSkill>
    <effectWorking>ButcherFlesh</effectWorking>
    <soundWorking>Recipe_ButcherCorpseFlesh</soundWorking>
    <interruptIfIngredientIsRotting>true</interruptIfIngredientIsRotting>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>CorpsesHumanlike</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
	  <li>
        <filter>
          <thingDefs>
				<li>DarkDescent_Vitae</li>
		  </thingDefs>
        </filter>
        <count>5</count>
      </li>
	  <li>
        <filter>
          <categories>
            <li>Leathers</li>
          </categories>
        </filter>
        <count>25</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>CorpsesHumanlike</li>
        <li>Leathers</li>
      </categories>
	  <thingDefs>
			<li>DarkDescent_Vitae</li>
		  </thingDefs>
      <specialFiltersToDisallow>
        <li>AllowRotten</li>
      </specialFiltersToDisallow>
    </fixedIngredientFilter>
	<products>
      <DarkDescent_InactiveGrunt>1</DarkDescent_InactiveGrunt>
    </products>
	<skillRequirements>
      <Medicine>2</Medicine>
      <Intellectual>6</Intellectual>
    </skillRequirements>
  </RecipeDef>
  
