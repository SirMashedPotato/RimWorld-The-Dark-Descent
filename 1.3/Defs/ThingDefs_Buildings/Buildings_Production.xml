<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BenchBase">
    <defName>DarkDescent_TableOrb</defName>
    <label>orb table</label>
    <description>A heavy table covered with various tools, and an orb. Used for creating servants from corpses, and manipulating vitae.\n\nNote: After the process has been completed, the servant will remain in a dormant state until activated.</description>
    <thingClass>Building_WorkTable</thingClass>
    <graphicData>
      <texPath>Things/Building/Production/DarkDescent_TableOrb</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(3.5,1.5)</drawSize>
	  <shaderType>CutoutComplex</shaderType>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <castEdgeShadows>true</castEdgeShadows>
    <staticSunShadowHeight>0.20</staticSunShadowHeight>
    <costStuffCount>75</costStuffCount>
    <costList>
      <Steel>25</Steel>
      <DarkDescent_Orb>1</DarkDescent_Orb>
    </costList>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
    </stuffCategories>
    <altitudeLayer>Building</altitudeLayer>
    <fillPercent>0.5</fillPercent>
    <useHitPoints>True</useHitPoints>
    <statBases>
      <WorkToBuild>2000</WorkToBuild>
      <MaxHitPoints>180</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <Cleanliness>-15</Cleanliness>
    </statBases>
    <size>(3,1)</size>
    <designationCategory>Production</designationCategory>
    <passability>PassThroughOnly</passability>
    <pathCost>60</pathCost>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <recipes>
		<li>DarkDescent_HoundCreation</li>
		<li>DarkDescent_GruntCreation</li>
		<li>DarkDescent_BruteCreation</li>
		<li>DarkDescent_WretchCreation</li>
		<li>DarkDescent_EngineerCreation</li>
		<li>DarkDescent_TeslaCreation</li>
		<li>DarkDescent_GoliathCreation</li>
		<li>DarkDescent_InfusionResurrectionCreation</li>
		<li>DarkDescent_ExtractorCreation</li>
    </recipes>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <building>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
    </building>
    <comps>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>ToolCabinet</li>
        </linkableFacilities>
      </li>
    </comps>
    <designationHotKey>Misc3</designationHotKey>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
      <li>PlaceWorker_PreventInteractionSpotOverlap</li>
    </placeWorkers>
	<researchPrerequisites>
		<li>DarkDescent_OrbTableResearch</li>
	</researchPrerequisites>
  </ThingDef>

</Defs>
