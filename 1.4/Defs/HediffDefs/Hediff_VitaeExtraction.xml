<?xml version="1.0" encoding="utf-8" ?>
<Defs>
 
	<HediffDef>
		<defName>DarkDescent_VitaeExtracted</defName>
		<label>drained vitae</label>
		<description>The result of vitae extraction, leaves the victim in intense agony. Subsequent extraction will cause increased buildup. Will decrease over time.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<defaultLabelColor>(1.0, 0.4, 0.4)</defaultLabelColor>
		<makesSickThought>true</makesSickThought>
		<lethalSeverity>1</lethalSeverity>
		<scenarioCanAdd>true</scenarioCanAdd>
		<comps>
		  <li Class="HediffCompProperties_Immunizable">
			<severityPerDayNotImmune>-0.3</severityPerDayNotImmune>
		  </li>
		</comps>
		<stages>
		  <li>
			<label>minimal drain</label>
			<minSeverity>0.0</minSeverity>
			<painOffset>0.10</painOffset>
			<capMods>
			  <li>
				<capacity>Consciousness</capacity>
				<offset>-0.05</offset>
			  </li>
			</capMods>
		  </li>
		  <li>
			<label>minor drain</label>
			<minSeverity>0.2</minSeverity>
			<painOffset>0.20</painOffset>
			<capMods>
			  <li>
				<capacity>Consciousness</capacity>
				<offset>-0.10</offset>
			  </li>
			</capMods>
		  </li>
		  <li>
			<label>moderate drain</label>
			<minSeverity>0.40</minSeverity>
			<painOffset>0.40</painOffset>
			<capMods>
			  <li>
				<capacity>Consciousness</capacity>
				<offset>-0.20</offset>
			  </li>
			</capMods>
		  </li>
		  <li>
			<label>serious drain</label>
			<minSeverity>0.60</minSeverity>
			<painOffset>0.80</painOffset>
			<capMods>
			  <li>
				<capacity>Consciousness</capacity>
				<offset>-0.30</offset>
			  </li>
			</capMods>
		  </li>
		  <li>
			<label>extreme drain</label>
			<minSeverity>0.80</minSeverity>
			<painOffset>1.0</painOffset>
			<capMods>
			  <li>
				<capacity>Consciousness</capacity>
				<offset>-0.50</offset>
			  </li>
			</capMods>
		  </li>
		</stages>
	</HediffDef>
	
</Defs>